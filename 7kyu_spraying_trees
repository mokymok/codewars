def task(w,n,c):
    if w=='Monday':return f'It is {w} today, James, you have to work, you must spray {n} trees and you need {n*c} dollars to buy liquid'
    if w=='Tuesday':return f'It is {w} today, John, you have to work, you must spray {n} trees and you need {n*c} dollars to buy liquid'
    if w=='Wednesday':return f'It is {w} today, Robert, you have to work, you must spray {n} trees and you need {n*c} dollars to buy liquid'
    if w=='Thursday':return f'It is {w} today, Michael, you have to work, you must spray {n} trees and you need {n*c} dollars to buy liquid'
    if w=='Friday':return f'It is {w} today, William, you have to work, you must spray {n} trees and you need {n*c} dollars to buy liquid'
